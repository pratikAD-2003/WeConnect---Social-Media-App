<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".tabItems.upload_post">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/WeConnects_upload_post_page"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/fish_bond_bold"
            android:text="WeConnect"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/dfjajfkla"
        android:layout_below="@+id/WeConnects_upload_post_page"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose To Connect With Other's"
        android:textColor="@color/white"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_below="@+id/dfjajfkla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/upload_image_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload_image_post_24"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Photo"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginBottom="@dimen/_20sdp"/>


        <ImageButton
            android:id="@+id/upload_video_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload_video_post_24"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Video"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <ImageButton
            android:id="@+id/upload_reel_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reel1"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reel Post"
            android:textColor="@color/white"
            android:textStyle="bold|italic"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>