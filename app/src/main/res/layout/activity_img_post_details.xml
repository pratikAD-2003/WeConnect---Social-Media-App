<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Post_Details.img_post_details">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/WeConnects_upload_post_page"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/fish_bond_bold"
            android:text="WeConnects"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_below="@+id/WeConnects_upload_post_page"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/selected_post_img"
            android:layout_width="@dimen/_295sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/upload_image_post_24"
            android:layout_height="@dimen/_295sdp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/upload_post_select_btn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_upload_24"/>

        <TextView
            android:id="@+id/upload_post_img_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Click To Upload Post!"/>

        <EditText
            android:id="@+id/img_post_caption"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="match_parent"
            android:textColorHint="@color/white"
            android:hint="Write a Caption !"
            android:maxLength="200"
            android:maxWidth="@dimen/_40sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"/>

        <Button
            android:id="@+id/img_post_upload"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="Post"
            android:textColor="@color/white"
            android:background="@drawable/unfollow_btn"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>