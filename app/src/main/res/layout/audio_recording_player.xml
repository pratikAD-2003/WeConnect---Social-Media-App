<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/audio_l1"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/img_background"
        android:visibility="invisible">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Audio"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageButton
            android:id="@+id/sender_audi_play_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/img_background"
            android:src="@drawable/music_play_btn" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/send_audio_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/audio_l1"
        android:layout_alignBottom="@id/audio_l1"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toStartOf="@id/audio_l1"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        android:visibility="invisible" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/audio_l2"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/img_background"
        android:visibility="invisible">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Audio"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageButton
            android:id="@+id/receiver_audio_play_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/img_background"
            android:src="@drawable/music_play_btn" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/receiver_audio_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/audio_l2"
        android:layout_alignBottom="@+id/audio_l2"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toEndOf="@+id/audio_l2"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        android:visibility="invisible" />

</RelativeLayout>