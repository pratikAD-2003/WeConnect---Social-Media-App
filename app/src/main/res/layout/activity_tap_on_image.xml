<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_alignParentTop="true"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/on_tap_image_profileP"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/on_tap_image_username"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="pratik_26"
                android:layout_toEndOf="@+id/on_tap_image_profileP"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/tap_image_post_follow_btn"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_110sdp"
                android:background="@drawable/on_post_followed"
                android:elevation="@dimen/_15sdp"
                android:text="Connect"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/on_tap_image_post"
            android:layout_width="match_parent"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/upload_image_post_24"
            android:layout_height="@dimen/_250sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/on_tap_image_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/on_tap_image_like_count"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/on_tap_image_like"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="0"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/on_tap_image_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@color/black"
                    android:src="@drawable/comment" />

                <ImageButton
                    android:id="@+id/on_tap_image_like_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/share" />

                <ImageButton
                    android:id="@+id/on_tap_image_like_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:src="@drawable/save" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

        <TextView
            android:id="@+id/on_tap_image_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/_2sdp"
            android:text="Hello" />

        <TextView
            android:id="@+id/on_tap_image_time"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="00:00" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>