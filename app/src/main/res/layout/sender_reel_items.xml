<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/reelL1"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/img_background"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/sender_reel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_4sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:visibility="invisible" />

    </RelativeLayout>


    <TextView
        android:id="@+id/send_reel_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_7sdp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/reelL1"
        android:layout_alignTop="@+id/reelL1"
        android:layout_toStartOf="@+id/reelL1"
        android:textSize="@dimen/_8sdp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/reelL2"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_alignParentStart="true"
        android:background="@drawable/receiver_image"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/receiver_reel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_4sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:visibility="invisible" />
    </RelativeLayout>


    <TextView
        android:id="@+id/receiver_reel_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_7sdp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/reelL1"
        android:layout_alignTop="@+id/reelL2"
        android:layout_toEndOf="@+id/reelL2"
        android:textSize="@dimen/_8sdp"
        android:visibility="invisible" />

</RelativeLayout>