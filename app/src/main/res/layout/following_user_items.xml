<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="@dimen/_8sdp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/following_userPic"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_height="@dimen/_30sdp" />

    <TextView
        android:id="@+id/following_username"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/following_userPic"
        android:text="pratiik_26"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:textStyle="italic"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/following_list_btn"
        android:textColor="@color/white"
        android:text="Connect"
        android:layout_gravity="center"
        android:elevation="@dimen/_15sdp"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/on_post_followed"/>

</RelativeLayout>